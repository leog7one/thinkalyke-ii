<header>
	<h1 class="thinkerUsername"><%= @thinker.username %> </h1>
   <ul class="actions">
    <li><a href="#" class="js-previous btn btn-primary btn-sm" data-id="<%=@thinker.id%>">Previous Thinker</a></li>
    <li><a href="#" class="js-next btn btn-primary btn-sm" data-id="<%=@thinker.id%>">Next Thinker</a></li>
    </ul>
</header>

<h4 class="thinkerEmail"> Email: <%= @thinker.email %></h4>


<h3>Thoughts:</h3>
<table class="table table-striped table-responsive">

 <thead>
    <tr>
      <th>Thought</th>
    </tr>
  </thead>
  
  <tbody class="thinkerThoughts">
    <% @thinker.thoughts.each do |thought| %>
     <tr>
        <td><%= thought.title%></td>
       
      </tr>
    <% end %>
  </tbody>

</table>

<h3>Comments:</h3>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Comment</th>
      <th>Thought</th>
    </tr>
  </thead>

  <tbody class="comment-list">
    <% @thinker.comments.each do |comment| %>
      <tr>
        <td><%= truncate(comment.body, length: 30) %></td>
        <td><%= comment.thought.title %></td>
      </tr>
    <% end %>
  </tbody>

</table>

