<%= form_for [:admin, @category] do |f| %>
  

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Submit Category", class: "btn btn-success" %>
  </div>
<% end %>
